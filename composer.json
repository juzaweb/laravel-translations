{
    "name": "juzaweb/laravel-translations",
    "license": "MIT",
    "authors": [
        {
            "name": "The Anh Dang",
            "homepage": "https://juzaweb.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "astrotomic/laravel-translatable": "^11.13",
        "juzaweb/laravel-translation-loader": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0.1",
        "orchestra/testbench": "^9.14"
    },
    "autoload": {
        "psr-4": {
            "Juzaweb\\Translations\\": "src/"
        },
        "files": [
            "helpers/helpers.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Juzaweb\\Translations\\TranslationsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "workbench/app/",
            "Database\\Factories\\": "workbench/database/factories/",
            "Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    }
}